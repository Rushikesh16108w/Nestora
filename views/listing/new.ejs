<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-5">
    <div class="col-10 col-md-8 col-lg-6 offset-1 offset-md-2 offset-lg-3">
      
      <!-- Card Wrapper -->
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
          <h3 class="mb-4 text-center fw-bold text-success">
            âž• Create a New Listing
          </h3>

          <form method="POST" action="/listings">

            <!-- Title -->
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="title" 
                     name="listing[title]" placeholder="Title">
              <label for="title"><i class="fa-solid fa-heading me-2"></i> Title</label>
            </div>

            <!-- Description -->
            <div class="form-floating mb-3">
              <textarea class="form-control rounded-3" id="description" 
                        style="height: 120px"
                        name="listing[description]" placeholder="Description"></textarea>
              <label for="description"><i class="fa-solid fa-align-left me-2"></i> Description</label>
            </div>

            <!-- Image -->
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="image"
                     name="listing[image]" placeholder="Image URL">
              <label for="image"><i class="fa-solid fa-image me-2"></i> Image Link</label>
            </div>

            <!-- Price & Country -->
            <div class="row">
              <div class="col-md-4">
                <div class="form-floating mb-3">
                  <input type="number" class="form-control rounded-3" id="price"
                         name="listing[price]" placeholder="Price">
                  <label for="price"><i class="fa-solid fa-tag me-2"></i> Price</label>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control rounded-3" id="country"
                         name="listing[country]" placeholder="Country">
                  <label for="country"><i class="fa-solid fa-globe me-2"></i> Country</label>
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="location"
                     name="listing[location]" placeholder="Location">
              <label for="location"><i class="fa-solid fa-map-marker-alt me-2"></i> Location</label>
            </div>

            <!-- Submit -->
            <div class="d-grid">
              <button class="btn btn-gradient fw-bold py-2 rounded-3">
                <i class="fa-solid fa-plus-circle me-2"></i> Add Listing
              </button>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>

  <!-- Extra CSS -->
  <style>
    .btn-gradient {
      background: linear-gradient(90deg, #00c851, #007e33);
      color: white;
      border: none;
      transition: all 0.3s ease;
    }
    .btn-gradient:hover {
      background: linear-gradient(90deg, #007e33, #00c851);
      transform: scale(1.05);
      box-shadow: 0px 4px 15px rgba(0, 200, 81, 0.4);
    }
    .card {
      animation: fadeInUp 0.6s ease;
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</body>
